{
  "name": "vite-plugin-image-sizes",
  "version": "1.0.5",
  "description": "A Vite plugin to automatically add width and height attributes to img and source tags.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test:build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e:build": "node e2e-smoke/scripts/generate-images.mjs && npx vite build --config e2e-smoke/vite.config.ts",
    "e2e:check": "node e2e-smoke/scripts/check-e2e.mjs",
    "e2e": "npm run e2e:build && npm run e2e:check",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ozekimasaki/vite-plugin-image-sizes.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "image",
    "size",
    "cls"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ozekimasaki/vite-plugin-image-sizes/issues"
  },
  "homepage": "https://github.com/ozekimasaki/vite-plugin-image-sizes#readme",
  "engines": {
    "node": ">=22.12.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "glob": "^11.0.3",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/sharp": "^0.31.1",
    "vitest": "^2.0.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.5",
    "vite": "^7.0.0"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  }
}
